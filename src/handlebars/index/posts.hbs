<ul class="posts__list">
	{{#each posts}}
		<li class="posts__item">
			<div class="post__image">
				<img src="/assets/img/posts/{{this.id}}.jpg" alt="">
			</div>
			<div class="post__content">
				<span class="post__type">MINIMALISM</span>
				<h2>{{ this.title }}</h2>
				<div class="post__info">
					<span class="post__author">Leslie Pena</span>
					<div class="post__dot">
						<div class="post__dot-figure"></div>
					</div>
					<span class="post__date">April 25, 2012</span>
					<span class="post__ago">(6 mins read)</span>
				</div>
				<p class="post__text">{{ this.body }}</p>
			</div>
		</li>
	{{/each}}
</ul>
